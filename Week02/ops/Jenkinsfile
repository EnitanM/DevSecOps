pipeline {
    agent any
    environment{
        APP_NAME = "personalproject"
        IMAGE_TAG = "v2.0.${BUILD_NUMBER}"
        DOCKER_IMAGE = "${APP_NAME}"
        DOCKER_REGISTRY = "enitanm"
    }
    options {timestamps()}
    triggers { githubPush() }
    stages {
        stage('Checkout') {
            steps {
                scmSkip(deleteBuild: true)
                checkout scm
            }
        }
        stage('View Docker Images') {
            when { branch 'feature' }
            steps {
                sh '''
                echo "Viewing and Cleaning up Docker images"
                docker images
                '''
            }
        }
        stage('Build Test Docker Image') {
            when{ 
                expression { fileExists('Week02/flask-app/Dockerfile')}
            }
            steps {
                sh '''
                    echo "Building Docker image for unit tests..."
                    cd Week02/flask-app
                    docker build -t $DOCKER_IMAGE .
                '''
            }
        }
        stage('Run Unit Tests') {
            steps {
            sh '''
                echo "Running Unit Tests..."
                docker run --rm -v $PWD/Week02/flask-app:/app -w /app $DOCKER_IMAGE \
                /bin/bash -c "pytest tests.py --junitxml=test-results/results.xml"
            '''
            }
        }
        stage('Run Security Scan - Trivy') {
            steps {
                sh '''
                echo "Scanning Docker image with Trivy..."
                if ! command -v trivy > /dev/null; then
                echo "Installing Trivy..."
                mkdir -p $HOME/bin
                curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b $HOME/bin
                fi
                export PATH="$HOME/bin:$PATH"
                mkdir -p Week02
                trivy image --exit-code 1 --severity HIGH,CRITICAL --format table $DOCKER_IMAGE | tee Week02/trivy-report.txt
                '''
            }
        }
        stage('Run Security Scan - Docker Scout') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                    sh '''
                    echo "Scanning Docker image with Docker Scout..."
                    if ! command -v scout > /dev/null; then
                    echo "Installing Docker Scout..."
                    curl -sfL https://raw.githubusercontent.com/docker/scout-cli/main/install.sh | sh -s -- -b $HOME/bin
                    fi
                    export PATH="$HOME/bin:$PATH"
                    mkdir -p Week02
                    echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin
                    docker-scout cves $DOCKER_REGISTRY/$DOCKER_IMAGE:v2.0.3 --exit-code --only-severity critical,high --format text | tee Week02/scout-report.md
                    '''
                }
            }
        }   
        stage('Push to Registry') {
            when { branch 'main' }
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                    sh '''
                    echo "Pushing Docker Image to Registry..."
                    echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin
                    docker tag $DOCKER_IMAGE $DOCKER_REGISTRY/$APP_NAME:$IMAGE_TAG
                    docker push $DOCKER_REGISTRY/$APP_NAME:$IMAGE_TAG
                    '''
                }
            }
        }
        stage('Update Kubernetes Deployment') {
            when { branch 'main' }
            steps {
                withCredentials([gitUsernamePassword(credentialsId: 'seniorprojecttoken', gitToolName: '')]) {
                    sh '''
                    echo "Updating deployment manifest with new image tag..."
                    cd Week02/infra/helm/flask-app
                    echo "CURRENT VALUES MANIFEST:"
                    cat values.yaml
                    sed -i "s|tag:.*|tag: ${IMAGE_TAG}|g" values.yaml
                    echo "UPDATED VALUES MANIFEST:"
                    cat values.yaml
                    echo "Pushing updated manifest to GitHub repository..."

                    git remote set-url origin https://$GIT_USERNAME:$GIT_PASSWORD@github.com/EnitanM/CI-CD.git

                    #Ensure this is the main branch
                    git checkout main

                    git add values.yaml
                    git commit -m "Updated image tag to $IMAGE_TAG [ci skip]"
                    git push origin main
                    '''
                }
            }
        }
    }
    post {
        always {
            junit 'Week02/flask-app/test-results/results.xml'
            archiveArtifacts artifacts: 'Week02/trivy-report.txt', allowEmptyArchive: true
            archiveArtifacts artifacts: 'Week02/scout-report.md', allowEmptyArchive: true
            cleanWs()
        }
    }
}