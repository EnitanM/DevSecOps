pipeline {
    agent any
    environment{
        APP_NAME = "personalproject"
        IMAGE_TAG = "v1.0.${BUILD_NUMBER}"
        DOCKER_IMAGE = "${APP_NAME}:test"
        DOCKER_REGISTRY = "enitanm"
    }
    options {timestamps()}
    triggers { githubPush() }
    stages {
        stage('Checkout') {
            steps {
                scmSkip(deleteBuild: true)
                checkout scm
            }
        }
        stage('View Docker Images') {
            when { branch 'feature' }
            steps {
                sh '''
                echo "Viewing and Cleaning up Docker images"
                docker images
                docker rmi -f $(docker images -q)
                '''
            }
        }
        stage('Build Test Docker Image') {
            steps {
                sh '''
                    echo "Building Docker image for unit tests..."
                    cd Week02/flask-app
                    docker build -t $DOCKER_IMAGE .
                '''
            }
        }
        stage('Run Unit Tests') {
            steps {
            sh '''
                echo "Running Unit Tests..."
                docker run --rm -v $PWD/Week02/flask-app:/app -w /app $DOCKER_IMAGE \
                /bin/bash -c "pytest tests.py --junitxml=test-results/results.xml"
            '''
            }
        }
        stage('Build Docker image') {
            when{ 
                branch 'main' 
                expression { fileExists('Week02/flask-app/Dockerfile')}
            }
            steps {
                sh '''
                echo "Building Docker Image..."
                cd Week02/flask-app
                docker build -t $DOCKER_REGISTRY/$APP_NAME:$IMAGE_TAG .
                '''
            }
        }
        stage('Push to Registry') {
            when { branch 'main' }
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                    sh '''
                    echo "Pushing Docker Image to Registry..."
                    echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin
                    docker push $DOCKER_REGISTRY/$APP_NAME:$IMAGE_TAG
                    '''
                }
            }
        }
        stage('Update Kubernetes Deployment') {
            when { branch 'main' }
            steps {
                withCredentials([gitUsernamePassword(credentialsId: 'seniorprojecttoken', gitToolName: '')]) {
                    sh '''
                    echo "Updating deployment manifest with new image tag..."
                    cd Week02/infra/helm/flask-app
                    echo "CURRENT VALUES MANIFEST:"
                    cat Values.yaml
                    sed -i "s|tag:.*|tag: ${IMAGE_TAG}|g" Values.yaml
                    echo "UPDATED VALUES MANIFEST:"
                    cat Values.yaml
                    echo "Pushing updated manifest to GitHub repository..."

                    git remote set-url origin https://$GIT_USERNAME:$GIT_PASSWORD@github.com/EnitanM/CI-CD.git

                    #Ensure this is the main branch
                    git checkout main

                    git add Values.yaml
                    git commit -m "Updated image tag to $IMAGE_TAG [ci skip]"
                    git push origin main
                    '''
                }
            }
        }
    }
    post {
        success {
            junit 'Week02/flask-app/test-results/results.xml'
            cleanWs()
        }
        failure {
            cleanWs()
        }
        aborted {
            cleanWs()
        }
    }
}